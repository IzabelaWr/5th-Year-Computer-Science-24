#num1 = 9
#num2 = 5

name = input("PLease enter your name.")
print("Hello", name)
print("Welcome to the addition and subtraction calculator.")
num1 = int(input("PLease enter a number."))
num2 = int(input("PLease enter a second number."))
print('Do you want me to (a)dd or (s)ubtract?')
choice = input()

if choice == 'a':
    print(num1 + num2)
elif choice == 's':
    print(num1 - num2)

print("Welcome to Temperature Alert System.")
temp = int(input("PLease enter your temperature value in degrees Celsius:"))
if temp <20:
    print("It's too cold. Please turn up the heating.")
elif temp >=20 and temp <=24:
    print("The temperature is okay.")
elif temp >=24:
    print("It's too hot. Please turn the heating down.")
