value_small_containers = 0.15

number_small_containers = int(input("Please enter how many small conatiners you are returing: "))
print("The total value of your small containers was:", value_small_containers * number_small_containers) #(i)

value_large_containers = 0.25

number_large_containers = int(input("Please enter how many large conatiners you are returing: ")) 
print("The total value of your large containers was:", value_large_containers * number_large_containers) #(ii)

total_containers = (value_small_containers * number_small_containers) + (value_large_containers * number_large_containers)
print("Your grand total was:", total_containers) #(iii)

shopping_bill = float(input("Please enter your shopping bill: "))
print("Your shopping bill with the deposit return is:", shopping_bill - total_containers) #(iv)

